{
  "private": true,
  "name": "elyra-vscode",
  "displayName": "elyra-vscode",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.52.0"
  },
  "workspaces": {
    "nohoist": [
      "**/@elyra/canvas",
      "**/@elyra/pipeline-editor"
    ],
    "packages": [
      "packages/*"
    ]
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCustomEditor:elyra-vscode.pipeline"
  ],
  "main": "./packages/extension/dist/index.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "elyra-vscode.pipeline",
        "displayName": "Elyra Pipeline",
        "selector": [
          {
            "filenamePattern": "*.pipeline"
          }
        ]
      }
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "babel-eslint": "^10.0.0",
    "eslint": "^7.11.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-header": "^3.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^3.1.0",
    "lerna": "^3.22.1",
    "lint-staged": "^9.4.3",
    "prettier": "^2.2.1",
    "typescript": "4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{tsx,ts,js,md,css,html,json}": [
      "prettier --write",
      "git add"
    ]
  }
}
